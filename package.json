{
  "name": "portfolio-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "infrastructure"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "dev": "turbo run dev",
    "frontend:dev": "turbo run dev --filter=frontend",
    "frontend:build": "turbo run build --filter=frontend",
    "frontend:test": "turbo run test --filter=frontend",
    "frontend:lint": "turbo run lint --filter=frontend",
    "infra:build": "turbo run build --filter=infrastructure",
    "infra:test": "turbo run test --filter=infrastructure",
    "infra:synth": "yarn workspace infrastructure synth",
    "infra:deploy": "yarn workspace infrastructure deploy"
  },
  "packageManager": "yarn@4.0.0",
  "devDependencies": {
    "turbo": "^2.6.1"
  }
}
